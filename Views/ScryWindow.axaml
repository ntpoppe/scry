<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Scry.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Width="480" Height="240"
        x:Class="Scry.Views.ScryWindow"
        x:DataType="vm:ScryWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Scry"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        CanResize="False"
        Topmost="True"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        Background="#CC1E1E1E"
        SystemDecorations="None"
		Padding="0"
		KeyDown="OnKeyDown">

    <Design.DataContext>
        <vm:ScryWindowViewModel/>
    </Design.DataContext>

	<Border CornerRadius="8"
			Padding="10"
			Margin="2">
		<!-- decorative gradient + transparency -->
		<Border.Background>
			<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
				<GradientStop Color="#CC262738" Offset="0.0"/>
				<GradientStop Color="#CC64576B" Offset="1.0"/>
			</LinearGradientBrush>
		</Border.Background>

		<Border.Effect>
			<DropShadowEffect Color="#000000"
							  BlurRadius="10"
							  Opacity="0.2"
							  OffsetY="2"/>
		</Border.Effect>

		<Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*">
			<!-- Branding header -->
			<TextBlock Grid.Row="0"
					   Text="Scry"
					   FontSize="20"
					   FontWeight="Bold"
					   Foreground="#E0F0FF"
					   HorizontalAlignment="Center"
					   Margin="0,0,0,6"/>

			<!-- Command input -->
			<TextBox Grid.Row="1"
					 Watermark="Type a commandâ€¦"
					 FontSize="13"
					 Height="26"
					 VerticalContentAlignment="Center"
					 Padding="6,0"
					 Background="#55262738"
					 BorderBrush="#5564576B"
					 Foreground="#E0F0FF"
					 BorderThickness="1"
					 CornerRadius="4"
					 MaxLength="25"/>

			<!-- Results fill remaining space -->
			<ListBox Grid.Row="2"
					 ItemsSource="{Binding Results}"
					 SelectedItem="{Binding SelectedResult}"
					 BorderThickness="0"
					 Background="Transparent"
					 Foreground="#E0F0FF"
					 FontSize="13"
					 Margin="0,8,0,0">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding}"
								   Padding="6,2"/>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>

		</Grid>
	</Border>
</Window>
